@page
@model WebAppToys.Pages.Categories.IndexModel
@using Infrastructure.Utility
@{
    ViewData["Title"] = "Categories";
}


<div class="container backgroundwhite border p-3">
    <div class="row">
        @if (User.IsInRole(SD.AdminRole))
        {
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                    <i class="fas fa-plus"></i>&nbsp;Create New
                </a>
            </div>}
        else
        { <h1>Access Denied</h1>
            <p>Sorry, you do not have permission to access this page.</p>
            <p>If you believe you should have access to this page, please contact the site administrator.</p>
        }
    </div>
    </br></br>
</div>
@if (User.IsInRole(SD.AdminRole))
{
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>

                <th></th>
            </tr>
        </thead>

    </table>
    @section Scripts{
        <script src="~/js/category.js"></script>
    }}

