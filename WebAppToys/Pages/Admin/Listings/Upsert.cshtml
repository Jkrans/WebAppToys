@page
@model WebAppToys.Pages.Admin.Listings.UpsertModel

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2>@(Model.ListingObj.Id != 0 ? "Update" : "Create") Toy</h2>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @if (Model.ListingObj.Id != 0)
                        {
                            <input type="hidden" asp-for="ListingObj.Id" />
                        }
                        <div class="form-group">
                            <label asp-for="ListingObj.Name">Name</label>
                            <input class="form-control" asp-for="ListingObj.Name" />
                            <span class="text-danger" asp-validation-for="ListingObj.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ListingObj.Description">Description</label>
                            <textarea id="txtDesc" class="form-control" style="height:200px;" asp-for="ListingObj.Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="ListingObj.Image">Image</label>
                            <input type="file" id="uploadImgBox" class="form-control" name="files" asp-for="ListingObj.Image" onchange="ImageSizeCheck()" accept="image/*" />
                            <span class="text-danger" asp-validation-for="ListingObj.Image"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ListingObj.Category_Id">Category</label>
                            <select asp-for="ListingObj.Category_Id" asp-items="@Model.CategoryList" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="ListingObj.Category_Id"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">@(Model.ListingObj.Id != 0 ? "Update" : "Create")</button>
                            <a asp-page="./Index" class="btn btn-success">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
