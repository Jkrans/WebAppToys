@page
@model WebAppToys.Pages.Customer.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card bg-transparent border-0">
                <div class="card-body semi-transparent">
                    <h4 class="card-title">Listing Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ListingObj.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ListingObj.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ListingObj.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ListingObj.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ListingObj.Image)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ListingObj.Image)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-transparent border-0">
                <div class="card-body semi-transparent">
                    <h4 class="card-title">Bid</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BidsObj.User_Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BidsObj.User_Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BidsObj.Listing_Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BidsObj.Listing_Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BidsObj.Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BidsObj.Price)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BidsObj.Trade_Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BidsObj.Trade_Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BidsObj.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BidsObj.Status)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a asp-page="./Edit" asp-route-id="@Model.BidsObj?.Id" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>



